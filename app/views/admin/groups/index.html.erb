<div class="container px-5 px-sm-0">
  <div class="row">

   

    <div class="col-md-8 offset-md-1">
        <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>メンバー数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
          <tr>
            <td><%= image_tag group.get_group_image, size: "50x50" %></td>
            <td><%= link_to group.name, group_path(group) %></td>
            <td><%= group.members.count %></td>
            <td><%= link_to "グループを削除", admin_group_path(group), method: :delete, data: { confirm: "本当に削除しても良いですか？" } %></td>
            
          </tr>
          <% end %>
        </tbody>
      </table>
    
    </div>

  </div>
</div>