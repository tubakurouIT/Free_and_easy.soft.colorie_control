<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>Member info</h2>


      <table class="table">
      <tr>
      <td><%= image_tag @member.get_profile_image, size:'100x100',fallback: "no_image.jpg" %></td>
      </tr>
      <tr>
        <th>name</th>
        <th><%= @member.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @member.introduction %></th>
      </tr>
    </table>
    
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Free_posts</h2>
      


      <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col" colspan="3">Body</th>
    </tr>
  </thead>
  <tbody>
    <% @free_posts.each do |free_post| %>
      <tr>
        <td>
          <%= image_tag free_post.get_image, size: '50x50', class: 'rounded' %>
        </td>
        <td><%= free_post.body %></td>
        <td>
          <td><%= link_to "削除", admin_free_post_path(free_post), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-danger" %></td>
        </td>
      </tr>
    <% end %>
    
</tbody>
</table>



    </div>
  </div>
</div>