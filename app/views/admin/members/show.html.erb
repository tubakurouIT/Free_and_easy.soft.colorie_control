<div class="container my-5">
  <div class="row">
    <!-- メンバー情報セクション -->
    <div class="col-lg-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title mb-4">Member Info</h5>
          <div class="mb-3">
            <%= image_tag @member.get_profile_image, size: '120x120', fallback: 'no_image.jpg', class: 'rounded-circle border' %>
          </div>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th scope="row" class="text-muted text-start">Name</th>
                <td class="text-start"><%= @member.name %></td>
              </tr>
              <tr>
                <th scope="row" class="text-muted text-start">Introduction</th>
                <td class="text-start"><%= @member.introduction %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- フリーポストセクション -->
    <div class="col-lg-8">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title text-primary mb-4">Free Posts</h5>
          
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover align-middle">
            <thead class="table-primary">
                <tr>
                  <th scope="col">Image</th>
                  <th scope="col">Body</th>
                  <th scope="col" colspan="2">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @free_posts.each do |free_post| %>
                  <tr>
                    <td>
                      <%= image_tag free_post.get_image, size: '50x50', class: 'rounded' %>
                    </td>
                    <td><%= free_post.body %></td>
                    <td>
                      <%= link_to "削除", admin_free_post_path(free_post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- 戻るリンク -->
      <div class="text-center mt-4">
        <%= link_to "一覧へ", admin_members_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>
