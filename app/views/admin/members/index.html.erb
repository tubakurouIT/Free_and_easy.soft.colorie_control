<!-- Members Table -->
<div class="container my-5">
  <h2 class="text-primary mb-4">Members</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-primary">
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Name</th>
          <th scope="col">Introduction</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td>
              <%= image_tag(member.get_profile_image, size: '50x50', class: "rounded-circle", alt: "#{member.name}'s profile image") %>
            </td>
            <td>
              <%= link_to(member.name, admin_member_path(member), class: "text-decoration-none fw-bold text-dark") %>
            </td>
            <td><%= member.introduction %></td>
            <td><%= member.email %></td>
            <td>
              <%= link_to "削除", admin_member_path(member), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Go back link -->
  <div class="text-center mt-3">
    <%= link_to "一覧へ", admin_members_path, class: "btn btn-outline-primary" %>
  </div>
</div>
