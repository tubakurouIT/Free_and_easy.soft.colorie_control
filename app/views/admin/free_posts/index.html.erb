<div class='container px-5 px-sm-0'>
  <div class='row'>
    
    <div class='col-md-8 offset-md-1'>
      <h2>Free_posts</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>free_posts</th>
            <th>name</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @free_posts.each do |free_post| %>
            <tr>
              <td><%= image_tag free_post.get_image, size:'50x50' %></td>
              <td><%= link_to free_post.body, admin_free_post_path(free_post) %></td>
              <td><%= link_to free_post.member.name, admin_member_path(free_post.member_id) %></td>
              <td><%=  "#{free_post.comments.count} コメント" %></p>
              <td><%= link_to "削除", admin_free_post_path(free_post), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-danger" %></td>
              

            </tr>
          <% end %>
        </tbody>
      </table>



      
    </div>
  </div>
</div>