

<% unless current_member.email == "guest@example.com" %>

<%= form_with model:free_post,local:true do |f| %>
  

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control-file free_post_image", accept: 'image/*' %></td>
  </div>

  <% if current_member.groups.present? %>
  <h6 class="mt-3">Group</h6>
  <div class="form-group">
  <%= f.collection_select :group_id, current_member.groups, :id, :name, {prompt: "選択してください"}, :class => 'form-control', :id => 'group_id' %>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control free_post_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  <% if free_post.present? && free_post.id %>
    <%= link_to "削除", free_post_path(free_post), method: :delete,class:"btn btn-danger" %>
  <% end %>
  </div>

    
<% end %>
<% end %>