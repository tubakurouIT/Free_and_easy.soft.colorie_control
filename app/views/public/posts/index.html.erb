<div class="container py-4">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 bg-light rounded shadow-sm p-4">
      <h2 class="text-primary mb-4">Member Info</h2>
      
      <!-- Member Info Section -->
      <div class="mb-4">
        <%= render 'public/members/info', member: current_member %>
      </div>
      
      <!-- Form Section -->
      <div>
        <%= render 'form', post: @post %>
      </div>
    </div>
    
    <!-- Main Content -->
    <div class="col-md-8 offset-md-1">
      <%= render 'index', posts: @posts, post_1: @post %>
    </div>
  </div>
</div>
