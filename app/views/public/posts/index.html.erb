<% if @post.errors.any? %>
   <%= @post.errors.count %>件のエラーが発生しました
   <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
   </ul>
<% end %>




<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>Member info</h2>
      <%= render 'public/members/info', member: current_member %>
      <h2 class="mt-3">New Post</h2>
      <%= render 'form', post: @post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Posts</h2>
      <%= render 'index', posts: @posts, post_1: @post%>
    </div>
  </div>
</div>
