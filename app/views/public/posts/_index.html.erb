<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>name</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
       
        <td><%= image_tag post.get_image, size:'50x50' %></td>
        <td><%= link_to post.title,post %></td>
        <td><%= post.body %></td>
        <td><%= post.member.name %></td>
        <% if current_member.id == post.member_id %>
        <td><%= link_to "編集", edit_post_path(post),class:"btn btn-success" %></td>
        <td><%= link_to "削除", post_path(post), method: :delete,class:"btn btn-danger" %></td>
        <% end %>
        

       
      </tr>
    <% end %>
  </tbody>
</table>