<div class="container my-5">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
      <!-- Member Info -->
      <h2 class="text-primary mb-4">Member Info</h2>
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <%= render 'public/members/info', member: @member %>
        </div>
      </div>

      <!-- New Post Form -->
      <h2 class="text-primary mb-4">New Post</h2>
      <div class="card shadow-sm">
        <div class="card-body">
          <%= render 'form', post: @post_new %>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="col-md-8 offset-md-1">
      <!-- Post Detail -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h2 class="text-primary mb-4">Post Detail</h2>
          <table class="table table-bordered" style="table-layout: fixed;">
            <tbody>
              <!-- Post Member Info -->
              <tr>
                <td class="text-center align-middle" style="width: 200px;">
                  <%= link_to(@post.member) do %>
                    <%= image_tag @post.get_image, class: "img-thumbnail mb-2", size: "200x200" %><br>
                    <strong class="text-primary"><%= @post.member.name %></strong>
                  <% end %>
                </td>
              </tr>

              <!-- Post Title -->
              <tr>
                <td>
                  <h5 class="text-primary">
                    <%= link_to @post.title, @post, class: "text-decoration-none" %>
                  </h5>
                </td>
              </tr>

              <!-- Post Body -->
              <tr>
                <td>
                  <p class="text-muted"><%= simple_format(@post.body) %></p>
                </td>
              </tr>

              <!-- Edit/Delete Buttons -->
              <% if @post.member == current_member %>
                <tr>
                  <td class="text-end">
                    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm btn-outline-success me-2" %>
                    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-outline-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
