<div class="container my-5">
  <!-- グループ名 -->
  <h2 class="text-center text-primary fw-bold"><%= @group.name %></h2>

  <!-- 承認待ち一覧 -->
  <div class="card shadow-sm mt-5">
    <div class="card-header bg-primary text-white text-center fw-bold">
      承認待ち一覧
    </div>
    <div class="card-body p-3">
      <div class="table-responsive">
        <%= render 'public/groups/members', group: @group, group_members: @application_group_members %>
      </div>
    </div>
    <div class="card-footer text-center bg-light">
      <%= paginate @application_group_members %>
    </div>
  </div>

  <!-- 許可一覧 -->
  <div class="card shadow-sm mt-5">
    <div class="card-header bg-success text-white text-center fw-bold">
      許可一覧
    </div>
    <div class="card-body p-3">
      <div class="table-responsive">
        <%= render 'public/groups/members', group: @group, group_members: @permit_group_members %>
      </div>
    </div>
    <div class="card-footer text-center bg-light">
      <%= paginate @permit_group_members %>
    </div>
  </div>

  <!-- 拒否一覧 -->
  <div class="card shadow-sm mt-5">
    <div class="card-header bg-danger text-white text-center fw-bold">
      拒否一覧
    </div>
    <div class="card-body p-3">
      <div class="table-responsive">
        <%= render 'public/groups/members', group: @group, group_members: @rejection_group_members %>
      </div>
    </div>
    <div class="card-footer text-center bg-light">
      <%= paginate @rejection_group_members %>
    </div>
  </div>

  <!-- 戻るボタン -->
  <div class="text-center mt-5">
    <%= link_to "戻る", group_path(@group), class: 'btn btn-outline-primary fw-bold px-4 py-2' %>
  </div>
</div>