<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>メンバー数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
    <tr>
      <td><%= image_tag group.get_group_image, size: "50x50" %></td>
      <td><%= link_to group.name, group_path(group) %></td>
      <td><%= group.members.count %></td>
      <td><%= link_to "Show", group, class: "group_#{group.id}" %></td>
      <% if group.is_owned_by?(current_member) %>
        <td><%= link_to "Edit", edit_group_path(group), class: "btn btn-success group_#{group.id}" %></td>
        <td><%= link_to "グループを削除", group_path(group), method: :delete, data: { confirm: "本当に削除しても良いですか？" } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>