


<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="col-6 offset-3">
      
      <div><%= flash[:error] %></div>
    
  <h4 class="my-3"><span style="background-color:#eeeeee">ログイン</span></h4>
  
  <p>会員の方はこちらからログイン</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="field my-2">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>
          <div class="field my-2">
          <%= f.label :"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current_password",class:"form-control" %>
          
          <div class="actions my-3">
            <%= f.submit "ログイン",class: "btn btn-primary"%>
          </div>
    <% end %>

   <div>
   <h4 class="text-left"><span style="background-color:#eeeeee">会員登録がお済みでない⽅</span></h4><br />
   <p class="text-left"><%= link_to "こちら", new_member_registration_path %> から新規登録を行ってください。</p>
   </div>
   
      </div>
    </div>
  </div>
</div>