<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      
      <!-- 新規会員登録フォーム -->
      <div class="card shadow-sm p-4">
        <h4 class="text-center mb-4"><span class="bg-light p-2">新規会員登録</span></h4>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          
          <!-- 名前入力 -->
          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, placeholder: "ニックネーム", autocomplete: "name", class: "form-control" %>
          </div>

          <!-- メールアドレス入力 -->
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <!-- パスワード入力 -->
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <!-- パスワード確認入力 -->
          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <!-- 新規登録ボタン -->
          <div class="d-grid">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      
      <!-- ログインリンク -->
      <div class="text-center mt-4">
        <h5><span class="bg-light p-2">既に登録済みの方</span></h5>
        <p><%= link_to "こちら", new_member_session_path %> からログインしてください。</p>
      </div>
    </div>
  </div>
</div>
