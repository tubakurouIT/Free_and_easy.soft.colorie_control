<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead class="table-primary">
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col" class="text-center">Members</th>
        <th scope="col" colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% group_members.each do |group_member| %>
        <% group = group_member.group %>
        <tr>
          <td class="align-middle">
            <%= image_tag group.get_group_image, style: "width: 50px; height: 50px;", class: "rounded" %>
          </td>
          <td class="align-middle">
            <%= link_to group.name, group_path(group), class: "fw-bold text-dark text-decoration-none" %>
          </td>
          <td class="align-middle text-center"><%= group.group_members.permit.count %></td>
          <td class="align-middle">
            <%= link_to 'Show', group, class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
